generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  nickname     String   @unique
  profileImage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  // 연결
  Report       Report[] @relation("User_BookReport")
}

model Book {
  isbn          String   @unique
  title         String
  author        String
  description   String?
  cover         String?
  page          Int
  pubDate       String
  publisher     String
  priceStandard Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  // 연결
  Report        Report[]
}

model Report {
  id         String     @id @default(uuid())
  title      String
  content    String
  tags       String[]   @default([])
  reportType ReportType
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  // 연결
  userId     String
  user       User       @relation(fields: [userId], references: [id], name: "User_BookReport", onDelete: Cascade)
  isbn       String?
  book       Book?      @relation(fields: [isbn], references: [isbn], onDelete: SetNull)
}

enum ReportType {
  SHORT
  MIDDLE
  LONG
}
